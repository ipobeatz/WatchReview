<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TMDBApi" parent="Theme.Material3.Light">
        <!-- Primary brand color. -->

        <item name="colorPrimary">#F1F0F3</item>
        <item name="colorPrimaryVariant">@color/ic_movies_app_background</item>
        <item name="colorOnPrimary">#399761</item>
        <item name="preferenceCategoryTitleTextColor">@color/android_emerald</item>
        <item name="android:colorBackground">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/ic_movies_app_background</item>

        <item name="colorSecondaryVariant">@color/anti_flash_white</item>
        <item name="colorOnSecondary">@color/anti_flash_white</item>

        <item name="android:textColor">#B63636</item>

        <item name="android:textColorSecondary">@color/anti_flash_white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark_gray</item>

        <!-- Customize your theme here. -->
        <item name="colorSurface">@color/black</item>
        <item name="colorOnSurface">@color/anti_flash_white</item>
        <item name="android:textColorPrimary">#FF0000</item>



    </style>


    <style name="Template.Widget.TabLayout" parent="Widget.Material3.TabLayout.Secondary">
        <item name="android:layout_width">match_parent</item>
        <item name="tabMode">scrollable</item>
        <item name="tabGravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tabIndicatorAnimationMode">linear</item>
        <item name="android:background">#201F1F</item>
        <item name="tabIndicatorColor">@color/ic_movies_app_background</item>
        <item name="tabTextColor">?attr/colorPrimary</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark_gray</item>
        <item name="tabTextAppearance">@style/Template.TextAppearance.TabLayoutItem</item>
    </style>
    <style name="Template.TextAppearance.TabLayoutItem" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_tab_layout_size</item>

        <item name="android:textAllCaps">true</item>
<!--        <item name="android:fontFamily">@font/lato</item>-->
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>


</resources>
